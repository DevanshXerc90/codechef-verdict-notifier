{
  "manifest_version": 3,
  "name": "CodeChef Verdict Notifier",
  "description": "Notifies when your CodeChef submission gets judged.",
  "version": "1.0",
  "permissions": [
    "webRequest",
    
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://www.codechef.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.codechef.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
